# EPG Environment Configuration Template
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=epg_development
DB_USER=epg_user
DB_PASSWORD=your_database_password_here

# Strapi Configuration
STRAPI_HOST=localhost
STRAPI_PORT=1337
STRAPI_URL=http://127.0.0.1:1337
JWT_SECRET=your_jwt_secret_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
APP_KEYS=your_app_key_1,your_app_key_2,your_app_key_3,your_app_key_4

# Customer Website Configuration
CUSTOMER_SITE_PORT=3000
NEXT_PUBLIC_STRAPI_URL=http://127.0.0.1:1337

# Employee Operations Configuration
EMPLOYEE_OPS_PORT=3001
NEXTAUTH_URL=http://127.0.0.1:3001
NEXTAUTH_SECRET=your_nextauth_secret_here

# ============================================================================
# QR CODE SYSTEM CONFIGURATION
# ============================================================================

# EPG Application URLs for QR Code Generation
NEXT_PUBLIC_EMPLOYEE_URL=http://127.0.0.1:3001
NEXT_PUBLIC_CUSTOMER_URL=https://epg.kevbot.app

# QR Code Generation Settings
NEXT_PUBLIC_QR_ERROR_CORRECTION=M
NEXT_PUBLIC_QR_DEFAULT_SIZE=medium
NEXT_PUBLIC_QR_ENABLE_ANALYTICS=true

# Mobile Detection and Optimization
NEXT_PUBLIC_MOBILE_QR_OPTIMIZED=true
NEXT_PUBLIC_FORCE_MOBILE_VIEW=false

# Development Settings
NEXT_PUBLIC_DEBUG_QR=true
NEXT_PUBLIC_QR_TEST_MODE=false
NEXT_PUBLIC_ENABLE_QR_DEBUG_OVERLAY=true