{
  "kind": "singleType",
  "collectionName": "company_settings",
  "info": {
    "singularName": "company-setting",
    "pluralName": "company-settings",
    "displayName": "Company Setting"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "companyName": {
      "type": "string",
      "default": "Envision Production Group",
      "required": true
    },
    "tagline": {
      "type": "string",
      "default": "Professional Event Equipment Rental"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "logoLight": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "text",
      "required": true
    },
    "businessHours": {
      "type": "text",
      "default": "Monday - Friday: 8:00 AM - 6:00 PM"
    }
  }
}
