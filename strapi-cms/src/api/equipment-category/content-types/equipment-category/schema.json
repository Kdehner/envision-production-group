{
  "kind": "collectionType",
  "collectionName": "equipment_categories",
  "info": {
    "singularName": "equipment-category",
    "pluralName": "equipment-categories",
    "displayName": "Equipment Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "equipment_item": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::equipment-item.equipment-item",
      "inversedBy": "categories"
    }
  }
}
